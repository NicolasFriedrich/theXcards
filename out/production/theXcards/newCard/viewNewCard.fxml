<AnchorPane fx:id="anchorPaneNewCard" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" stylesheets="@../ressources/CSS/root.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="newCard.ControllerNewCard">
    <HBox prefHeight="800.0" prefWidth="1280.0" />
    <VBox id="leftPane" fx:id="leftPane" prefHeight="800.0" prefWidth="250.0" stylesheets="@../ressources/CSS/leftPane.css">
