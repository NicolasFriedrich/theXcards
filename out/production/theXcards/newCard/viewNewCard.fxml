        <children>
            <HBox id="topBar" fx:id="topBar" prefHeight="50.0" prefWidth="1030.0">
            <children>
               <Label id="labelTitle" fx:id="labelTitle" prefHeight="50.0" prefWidth="420.0" text="New Card" textAlignment="CENTER">
